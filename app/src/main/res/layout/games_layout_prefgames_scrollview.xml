<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="60dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/snake_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Snake"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

            <Button
            android:id="@+id/airh_btn"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="Air Hockey"
            android:textSize="35sp"
            app:fontFamily="@font/josefin_sans_bold"
            android:textColor="@color/darkpink"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/snake_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_buttonthin" />

            <Button
                android:id="@+id/TTT_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Tic Tac Toe"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/airh_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

            <Button
                android:id="@+id/triv_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Trivea"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/TTT_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

            <Button
                android:id="@+id/bj_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Black Jack"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/triv_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

            <Button
                android:id="@+id/riddle_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Riddle Me"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/bj_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

            <Button
                android:id="@+id/shoot_btn"
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Shooter"
                android:textSize="35sp"
                app:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/darkpink"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/riddle_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_buttonthin" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>