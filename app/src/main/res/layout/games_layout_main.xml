<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_bar_layout">
            <include layout="@layout/layout_top_tabs"/>

        </RelativeLayout>


        <Button
            android:id="@+id/newc_button"
            android:layout_width="450dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:text="New Challenge"
            android:textSize="35sp"
            app:fontFamily="@font/josefin_sans_bold"
            android:textColor="@color/darkpink"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_buttonthin" />


        <Button
            android:id="@+id/ex_game_button"
            android:layout_width="450dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:text="Existing Games"
            android:textSize="35sp"
            app:fontFamily="@font/josefin_sans_bold"
            android:textColor="@color/darkpink"
            android:layout_below="@id/newc_button"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_buttonthin" />



        <Button
            android:id="@+id/preferences_button"
            android:layout_width="450dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:text="Preferences"
            android:textSize="35sp"
            app:fontFamily="@font/josefin_sans_bold"
            android:textColor="@color/darkpink"
            android:layout_below="@id/ex_game_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/rounded_buttonthin"
            />








    <!--Bottom Nav -->

    <include layout="@layout/layout_bottom_navigation"/>
    </RelativeLayout>


